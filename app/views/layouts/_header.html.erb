<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <%= link_to 'Bookers', home_top_path, class: "navbar-brand" %>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">

          <li class="nav-item">
            <%= link_to raw('<i class="fas fa-home me-1"></i>Home'), user_signed_in? ? user_path(current_user) : home_top_path, class: "nav-link" %>
          </li>

          <% unless user_signed_in? %>
            <li class="nav-item">
              <%= link_to raw('<i class="fas fa-link me-1"></i>About'), home_about_path, class: "nav-link" %>
            </li>
          <% end %>

          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to raw('<i class="fas fa-user me-1"></i>Users'), users_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to raw('<i class="fas fa-book me-1"></i>Books'), books_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to raw('<i class="fas fa-sign-out-alt me-1"></i>Log out'), destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to raw('<i class="fas fa-user-plus me-1"></i>Sign up'), new_user_registration_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to raw('<i class="fas fa-sign-in-alt me-1"></i>Log in'), new_user_session_path, class: "nav-link" %>
            </li>
          <% end %>

        </ul>
      </div>
    </div>
  </nav>
</header>
