<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">

      <%= link_to 'Bookers', root_path, class: "navbar-brand text-white fw-bold" %>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">

          <% unless user_signed_in? %>
            <li class="nav-item">
              <%= link_to raw('<i class="fa-solid fa-house me-1"></i>Home'), root_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item">
              <%= link_to raw('<i class="fa-solid fa-link me-1"></i>About'), home_about_path, class: "nav-link text-white" %>
            </li>
          <% end %>

          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to raw('<i class="fa-solid fa-house me-1"></i>Home'), user_path(current_user), class: "nav-link text-white" %>
            </li>
            <li class="nav-item">
              <%= link_to raw('<i class="fas fa-users me-1"></i>Users'), users_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item">
              <%= link_to raw('<i class="fas fa-book-open me-1"></i>Books'), books_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item">
              <%= link_to raw('<i class="fas fa-sign-out-alt me-1"></i>Log out'), destroy_user_session_path, method: :delete, class: "nav-link text-white" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to raw('<i class="fas fa-user-plus me-1"></i>Sign up'), new_user_registration_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item">
              <%= link_to raw('<i class="fas fa-sign-in-alt me-1"></i>Log in'), new_user_session_path, class: "nav-link text-white" %>
            </li>
          <% end %>

        </ul>
      </div>
    </div>
  </nav>
</header>