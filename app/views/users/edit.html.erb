<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-4">User info</h2>

      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <h6><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h6>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @user, local: true, html: { multipart: true } do |f| %>
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :profile_image, "Image", class: "form-label" %>
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: "image/*" %>
        </div>

        <div class="mb-3">
          <%= f.label :introduction, class: "form-label" %>
          <%= f.text_area :introduction, class: "form-control", rows: 3 %>
        </div>

        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
