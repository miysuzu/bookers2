<div class="container mt-4">
  <div class="row">
    <div class="col-md-4">
      <%= render 'books/sidebar' %>
    </div>

    <div class="col-md-8">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <% if book.image.attached? %>
                  <%= image_tag book.image, width: 100, height: 100 %>
                <% else %>
                  <%= image_tag 'no_image.png', width: 100, height: 100 %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
