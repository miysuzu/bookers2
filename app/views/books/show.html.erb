<div class="container mt-4">
  <div class="row">
    <!-- 左カラム：User info + New book -->
    <div class="col-md-4">
      <%= render 'books/sidebar' %>
    </div>

    <!-- 右カラム：Book detail -->
    <div class="col-md-8">
      <h2 class="mb-3">Book detail</h2>

      <table class="table align-middle">
        <tbody>
          <tr>
            <td style="width: 120px;">
              <% if @book.image.attached? %>
                <%= image_tag @book.image, width: 100, height: 100, class: "rounded" %>
              <% else %>
                <%= image_tag 'no_image.png', width: 100, height: 100, class: "rounded" %>
              <% end %>
            </td>
            <td>
              <h5 class="mb-1">
                <%= link_to @book.title, book_path(@book), class: "text-decoration-none fw-bold" %>
              </h5>
              <p class="mb-1"><%= @book.body %></p>
              <p class="text-muted">
                <%= link_to @user.name, user_path(@user), class: "text-decoration-none" %>
              </p>
            </td>

            <% if current_user == @book.user %>
              <td class="text-end">
                <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-outline-success me-2" %>
                <%= link_to "Destroy", book_path(@book),
                            method: :delete,
                            data: { confirm: "本当に消しますか？" },
                            class: "btn btn-sm btn-outline-danger" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
