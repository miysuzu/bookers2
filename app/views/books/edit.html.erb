<div class="container mt-5">
  <div class="d-flex justify-content-center">
    <div class="w-50">
      <h2 class="mb-4">Editing Book</h2>

      <% if @book.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h4>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>    

      <%= form_with model: @book, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :title, class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :body, "Opinion", class: "form-label" %>
          <%= f.text_area :body, class: "form-control", rows: 4 %>
        </div>

        <div class="mb-3">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
      <% end %>

      <div>
        <%= link_to "Show", book_path(@book), class: "text-primary me-2" %> |
        <%= link_to "Back", books_path, class: "text-secondary ms-2" %>
      </div>
    </div>
  </div>
</div>
